{
  "name": "__MSG_extensionName__",
  "manifest_version": 2,
  "version": "1.0.0",
  "default_locale": "en_US",
  "browser_action": {
    "default_icon": "icons/Icon.png"
  },
  "icons": {
    "29": "icons/Icon-Small.png",
    "40": "icons/Icon-Small-40.png",
    "50": "icons/Icon-Small-50.png",
    "72": "icons/Icon-72.png",
    "76": "icons/Icon-76.png"
  },
  "background": {
    "scripts": [
      "js/axios.min.js",
      "js/analytics.js",
      "js/background.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {"js": ["js/content.js"], "matches": ["http://*/*", "https://*/*"]}
  ],
  "permissions": [
    "tabs",
    "contextMenus"
  ]
}